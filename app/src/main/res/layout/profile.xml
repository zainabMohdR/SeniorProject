<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/main_color_green">

        <TextView
            android:id="@+id/lbusernamerr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:paddingLeft="150dp"
            android:drawableLeft="@drawable/edit45"
            android:layout_gravity="right"
            android:paddingRight="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:src="@drawable/profile1"
            android:layout_marginTop="20dp"

            android:paddingTop="20dp" />

        <TextView
            android:id="@+id/lbusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ahmed"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:textColorHighlight="@color/white_smoke"
            android:singleLine="true"
            android:paddingLeft="150dp" />

        <TextView
            android:id="@+id/lbemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ahmed_Salem@gmail.com"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingLeft="60dp"
            android:paddingBottom="20dp" />

    </LinearLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/lbemail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Abdullah"
            android:drawableLeft="@drawable/profile27"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"

            android:gravity="fill_vertical" />

        <TextView
            android:id="@+id/lbemail5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textColor="@color/selected_green"
            android:textSize="12sp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:paddingRight="20dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/lbemail2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Change Password"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/key165"
        android:gravity="fill_vertical" />

    <TextView
        android:id="@+id/lbemail3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  View Chat History"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/history6"
        android:gravity="fill_vertical" />

</LinearLayout>